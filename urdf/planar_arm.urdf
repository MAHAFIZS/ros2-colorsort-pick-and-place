<?xml version="1.0"?>
<robot name="planar_arm">
  <link name="base"/>

  <!-- Z slide (up/down) -->
  <joint name="z_slide" type="prismatic">
    <parent link="base"/><child link="z_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.20" effort="50" velocity="0.2"/>
  </joint>
  <link name="z_link"/>

  <!-- Shoulder -->
  <joint name="shoulder" type="revolute">
    <parent link="z_link"/><child link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="2.0"/>
  </joint>
  <link name="link1">
    <visual><origin xyz="0.15 0 0"/><geometry><box size="0.30 0.03 0.03"/></geometry></visual>
  </link>

  <!-- Elbow -->
  <joint name="elbow" type="revolute">
    <parent link="link1"/><child link="link2"/>
    <origin xyz="0.30 0 0"/><axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="10" velocity="2.0"/>
  </joint>
  <link name="link2">
    <visual><origin xyz="0.125 0 0"/><geometry><box size="0.25 0.03 0.03"/></geometry></visual>
  </link>

  <!-- End effector + fake gripper -->
  <joint name="wrist_fixed" type="fixed">
    <parent link="link2"/><child link="ee"/>
    <origin xyz="0.25 0 0"/>
  </joint>
  <link name="ee"/>
  <joint name="gripper" type="prismatic">
    <parent link="ee"/><child link="grip_tip"/>
    <origin xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="0.02" effort="10" velocity="0.1"/>
  </joint>
  <link name="grip_tip"/>
</robot>
